{
  "extends": "@adonisjs/tsconfig/tsconfig.app.json",
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "./build",
    "jsx": "react",
    "moduleResolution": "nodenext",
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./inertia/*"
      ],
      "@/*": [
        "./inertia/components/ui/*"
      ],
      "#controllers/*": [
        "./app/controllers/*.ts"
      ],
      "#exceptions/*": [
        "./app/exceptions/*.ts"
      ],
      "#models/*": [
        "./app/models/*.ts"
      ],
      "#mails/*": [
        "./app/mails/*.ts"
      ],
      "#services/*": [
        "./app/services/*.ts"
      ],
      "#listeners/*": [
        "./app/listeners/*.ts"
      ],
      "#events/*": [
        "./app/events/*.ts"
      ],
      "#middleware/*": [
        "./app/middleware/*.ts"
      ],
      "#validators/*": [
        "./app/validators/*.ts"
      ],
      "#providers/*": [
        "./providers/*.ts"
      ],
      "#policies/*": [
        "./app/policies/*.ts"
      ],
      "#abilities/*": [
        "./app/abilities/*.ts"
      ],
      "#database/*": [
        "./database/*.ts"
      ],
      "#tests/*": [
        "./tests/*.ts"
      ],
      "#start/*": [
        "./start/*.ts"
      ],
      "#config/*": [
        "./config/*.ts"
      ],
      "#ui/*": [
        "./inertia/components/ui/*"
      ]
    }
  },
  "exclude": [
    "node_modules/**/*",
    "build"
  ]
}
